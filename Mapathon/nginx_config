upstream django {
    server unix:///var/run/file.sock;
}
server {
    listen      80;
    server_name <server name>;
    charset     utf-8;
    client_max_body_size 75M;
    location /media  {
        alias path/to/repo/media;
    }
    location /static {
        alias path/to/repo/static;
    }
    location / {
        uwsgi_pass  django;
        include     path/to/repo/uwsgi_params;
    }
}
